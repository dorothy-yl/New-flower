<!-- 列表分类卡片 -->
<view class="goods_cart_container" bindtap="onGoodsClick">
  <!-- 商品图片 -->
  <image class="good_img" src="{{ goods.imageUrl || goods.image || '/assets/images/floor.jpg' }}" mode="widthFix" />
  <!-- 商品详细信息 -->
  <view class="goods_item_info">
    <!-- 商品名称 -->
    <text class="goods_item_info_name">{{ goods.name || '商品名称' }}</text>
    <!-- 商品描述 -->
    <text class="goods_item_info_promo">{{ goods.description || goods.promo || '商品描述' }}</text>
    <!-- 商品价格 -->
    <view class="goods_item_info_bottom">
      <view class="goods_item_info_price">
        <text class="text">¥</text>
        {{ goods.price || 0 }}
      </view>
      <view class="goods_item_info_origin_price" wx:if="{{ goods.marketPrice && goods.marketPrice > goods.price }}">
        <text class="text">¥</text>
        {{ goods.marketPrice }}
      </view>
      <!-- 加入购物车图片 -->
      <view class="goods_item_info_btn">
        <image class="goods_image" src="/assets/images/buybtn.png" mode="" />
      </view>
    </view>
  </view>
</view>