<view>
  <view class="category-container">
    <!-- 左侧的滚动视图区域 -->
    <scroll-view class="category-left-view" scroll-y>
      <!-- 一级分类 -->
      <view wx:for="{{ firstCategories }}" wx:key="id" class="left-view-item {{ activeFirstCategory === index ? 'active' : '' }}" data-index="{{ index }}" bindtap="onFirstCategoryClick">
        {{ item.name }}
      </view>
    </scroll-view>
    <!-- 右侧的滚动视图区域 -->
    <scroll-view class="category-right-view" scroll-y>
      <!-- 二级分类 -->
      <view class="test">
        <view wx:for="{{ currentSecondCategories }}" wx:key="id" class="right-view-item">
          <navigator class="navigator" url="/pages/goods/list/list?category2Id={{ item.id }}">
            <image class="" src="{{ item.imageUrl }}"></image>
            <text class="goods_item_name">{{ item.name }}</text>
          </navigator>
        </view>
      </view>
    </scroll-view>
  </view>
  <!-- 调试信息 -->
  <view class="debug-info" style="padding: 20rpx; background: #f5f5f5; font-size: 24rpx;">
    <view>一级分类数量: {{ firstCategories.length }}</view>
    <view>二级分类总数: {{ secondCategories.length }}</view>
    <view>当前显示二级分类数量: {{ currentSecondCategories.length }}</view>
    <view>当前选中一级分类: {{ activeFirstCategory }}</view>
    <view>当前选中一级分类ID: {{ activeFirstCategoryId }}</view>
    <view wx:if="{{ currentSecondCategories.length > 0 }}">
      当前二级分类:
      <text wx:for="{{ currentSecondCategories }}" wx:key="id">
        {{ item.name }}{{ index < currentSecondCategories.length - 1 ? ', ' : '' }}
      </text>
    </view>
  </view>
</view>